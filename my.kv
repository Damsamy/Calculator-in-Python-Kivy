    GridLayout:
        col_force_default: True
        col_default_width: 153
        pos: 0, 17
        spacing: 2
        padding: 10
        cols: 2
        rows: 1

        Button:
            size_hint: None, None
            size: 153, 65
            name: 0
            text: '0'
            on_press: root.Enter_Number('0', nums)

        Button:
            size_hint: None, None
            size: 75, 65
            name: 13
            text: '.'
            on_press: root.Enter_Number('.', nums)


    GridLayout:
        size: 85, 368
        cols: 1
        rows: 3
        pos: 233, 32
        spacing: 2
        padding: 10

        Button:
            name: 14
            text: '-'
            on_press: root.Enter_Number('-', nums)

        Button:
            name: 15
            size_hint: 1, None
            size: 1, 137.5
            text: '+'
            on_press: root.Enter_Number('+', nums)

        Button:
            name: 16
            size_hint: 1, None
            size: 1, 137.5
            text: '='
            on_press: root.calculation(result)

    GridLayout:
        size: 85, 368
        pos: 305, 32
        padding: 10
        spacing: 2
        cols: 1
        rows: 5

        Button:
            name: 17
            text: 'C'
