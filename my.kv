        Button:
            name: 19
            text: '('

        Button:
            name: 20
            text: ')'

        Button:
            name: 21
            text: '+/-'

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 0.5
            Rectangle:
                size: 150, 50
                pos: 10, 410
            Rectangle:
                size: 138, 50
                pos: 240, 410
        orientation: 'vertical'
        pos: 20, 420
        size: 50, 20
        Label:
            id: result
            underline: True
            text:
            font_size: 25

    Label:
        id: nums
        pos: 242, 420
        size: 130, 25
        font_size: 25
        text:
        text_size: self.size
        halign: 'right'
